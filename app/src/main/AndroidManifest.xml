<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.asl.mylibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/photolibrary"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/photolibrary"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.pdfviewer_activities.TheCursedChildActivity"></activity>
        <activity android:name=".activities.pdfviewer_activities.DeathlyHallowsActivity" />
        <activity android:name=".activities.pdfviewer_activities.Half_bloodPrinceActivity" />
        <activity android:name=".activities.pdfviewer_activities.OrderPhoenixActivity" />
        <activity android:name=".activities.pdfviewer_activities.PrisonerAzkabanActivity" />
        <activity android:name=".activities.pdfviewer_activities.ChamberSecretActivity" />
        <activity android:name=".activities.pdfviewer_activities.HarryPotterSorcerersStoneActivity" />
        <activity
            android:name=".activities.library_activities.FavouriteBooksActivity"
            android:label="@string/activity_favourite_books" />
        <activity
            android:name=".activities.library_activities.CurrentlyReadingActivity"
            android:label="@string/activity_currently_reading" />
        <activity
            android:name=".activities.library_activities.WantToReadActivity"
            android:label="@string/activity_want_to_read" />
        <activity
            android:name=".activities.library_activities.AlreadyReadBooksActivity"
            android:label="@string/activity_already_read" />
        <activity
            android:name=".activities.bookdetails_activities.BookActivity"
            android:label="@string/activity_book" />
        <activity
            android:name=".activities.library_activities.AllBooksActivity"
            android:label="@string/activity_all_books" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>